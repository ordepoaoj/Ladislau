@model Web20.Models.Revistum

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo</h1>

<h4>Revista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" required />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aleph" class="control-label"></label>
                <input asp-for="Aleph" class="form-control" required />
                <span asp-validation-for="Aleph" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ibict" class="control-label"></label>
                <input asp-for="Ibict" class="form-control" required />
                <span asp-validation-for="Ibict" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issn" class="control-label"></label>
                <input asp-for="Issn" class="form-control" required />
                <span asp-validation-for="Issn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check" checked />
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chegada" class="control-label"></label>
                <input asp-for="Chegada" class="form-control" type="date" required />
                <span asp-validation-for="Chegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CdAquisicao" class="control-label"></label>
                <select asp-for="CdAquisicao" class="form-control" asp-items="ViewBag.CdAquisicao">
                    <option value=null>--Selecione --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CdEditor" class="control-label"></label>
                <select asp-for="CdEditor" class="form-control" asp-items="ViewBag.CdEditor">
                    <option value=null>--Selecione --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CdPeriodicidade" class="control-label"></label>
                <select asp-for="CdPeriodicidade" class="form-control" asp-items="ViewBag.CdPeriodicidade">
                    <option value=null>--Selecione --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
