@model Web20.Models.Revistum

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    IEnumerable<Atualizacao> atualizacaos = ViewData["Atualizacao"] as IEnumerable<Atualizacao>;
}

<h1>Revista</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aleph)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aleph)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ibict)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ibict)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chegada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chegada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CdAquisicaoNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CdAquisicaoNavigation.TipoAquisicao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CdEditorNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CdEditorNavigation.NomeEditor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CdPeriodicidadeNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CdPeriodicidadeNavigation.TipoPeriodicidade)
        </dd>
    </dl>


    
    <table class="table">
        <thead>
            <tr>
                <th>
                    Data da Atualização
                </th>
                <th>
                    Data da Chegada
                </th>
                <th>
                    Usuário
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Atualizacao item in atualizacaos)
            {
            <tr>
                <td width="25%">
                    @Html.DisplayFor(modelItem => item.DtAtualizacao)
                </td>
                <td width="25%">
                    @Html.DisplayFor(modelItem => item.DtChegada)
                </td>
                <td width="50%">
                    @Html.DisplayFor(modelItem => item.CdUsuarioNavigation.FirstName)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
