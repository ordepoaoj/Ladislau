@model IEnumerable<Web20.Models.Revistum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    IEnumerable<Revistum> bimestral = ViewData["Bimestral"] as IEnumerable<Revistum>;
    IEnumerable<Revistum> trimestral = ViewData["Trimestral"] as IEnumerable<Revistum>;
    IEnumerable<Revistum> quadrimestral = ViewData["Quadrimestral"] as IEnumerable<Revistum>;
    IEnumerable<Revistum> semestral = ViewData["Semestral"] as IEnumerable<Revistum>;
    IEnumerable<Revistum> anual = ViewData["Anual"] as IEnumerable<Revistum>;
}

<h1>Revistas com recebimento em atraso</h1>
<br />
<h2>Mensal</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chegada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CdEditorNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CdPeriodicidadeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="30%">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td width="15%">
                    @Html.DisplayFor(modelItem => item.Chegada)
                </td>
                <td width="30%">
                    @Html.DisplayFor(modelItem => item.CdEditorNavigation.NomeEditor)
                </td>
                <td width="15%">
                    @Html.DisplayFor(modelItem => item.CdPeriodicidadeNavigation.TipoPeriodicidade)
                </td>
                <td width="10%">
                    <a asp-controller="Revistums" asp-action="Edit" class="editar" asp-route-id="@item.Id" title="Editar">Edit</a>
                    <a asp-controller="Revistums" asp-action="Details" class="detalhar" asp-route-id="@item.Id" title="Detalhe">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
